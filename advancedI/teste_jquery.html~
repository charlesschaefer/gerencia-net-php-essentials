    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
    <!--script type="text/javascript" src="jquery-1.7.2.min.js"></script-->
    <script type="text/javascript">
        // evento 'window.onload', no modo jQuery
        jQuery(document).ready(function() {
            // troca o estilo
            //jQuery('p').css({color: 'red', background: 'black'});
            // evento click em todos os links
            jQuery('a').click(function() {
                jQuery('li:first').html('<strong>terere</strong>');
            });
            
            /*// eventos no li: mousover ...
            jQuery('li').mouseover(function(){
                jQuery(this).css('border', '1px solid black');
            })
            // ... e mouseout
            .mouseout(function() {
                jQuery(this).css('border', 'none');
            });*/
            
            jQuery('li:even').css('background', 'silver');

            // o método each() funciona como um "foreach" para os 
            // elementos jQuery();
            var as = jQuery('a');
            as.each(function(index, element) {
                // troca para negrito só os links pares
                if (index % 2 == 0) 
                    jQuery(element).css('fontWeight', 'bold');
            });

        });

    </script>
</head>

<body>
    <a href="#" id="link" class="test primeiro links">Clique</a>
