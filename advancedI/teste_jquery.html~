    <a href="#" id="loader">Carregar o conteúdo</a>
    <div id="loading" style="position:absolute; top:5px; right:5px; background:red; color:white;display:none">Carregando...</div>
    
    <script type="text/javascript">
        jQuery('#loader').click(function(){
            /*jQuery.ajax({
                type: 'POST',
                url: 'ajax_teste.php',
                beforeSend: function() {
                    jQuery('#loading').show('slow');
                },
                complete: function() {
                    jQuery('#loading').hide(2000);
                },
                success: function(data) {
                    jQuery('#dinamico').html(data);
                },
                error: function() {}
            });*/
            $("#dinamico")
                .ajaxSend(function() {
                    jQuery('#loading').show('slow');
                })
                .ajaxComplete(function() {
                    jQuery('#loading').hide(2000);
                })
                .load('ajax_teste.php');
        });
    </script>
